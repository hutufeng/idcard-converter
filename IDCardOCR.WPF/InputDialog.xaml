<Window x:Class="IDCardOCR.WPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="重命名" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="请输入新名称:" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" MinWidth="200" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" IsDefault="True" Click="OkButton_Click" MinWidth="70" Margin="0,0,10,0"/>
            <Button Content="取消" IsCancel="True" Click="CancelButton_Click" MinWidth="70"/>
        </StackPanel>
    </StackPanel>
</Window>
