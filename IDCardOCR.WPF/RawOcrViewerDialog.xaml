<Window x:Class="IDCardOCR.WPF.RawOcrViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDCardOCR.WPF"
        mc:Ignorable="d"
        Title="原始OCR数据与编辑" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="原始OCR文本:" FontWeight="Bold" Grid.Row="0" VerticalAlignment="Top"/>
        <TextBox x:Name="RawOcrTextBox" Grid.Row="0" Margin="0,20,0,0" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="复制原始文本" Click="CopyRawOcrText_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <TextBlock Text="编辑提取数据:" FontWeight="Bold" Grid.Row="2" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <ScrollViewer Grid.Row="2" Margin="0,30,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="EditFieldsPanel">
                <!-- Fields will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="保存" IsDefault="True" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Content="取消" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
