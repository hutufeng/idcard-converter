
<Window x:Class="IDCardOCR.WPF.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDCardOCR.WPF"
        mc:Ignorable="d"
        Title="身份证信息提取 (C#)" Height="600" Width="1000">
    <DockPanel Margin="10">
        <StatusBar DockPanel.Dock="Bottom" Height="30">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="准备就绪"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ProgressPercentageTextBlock" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <ProgressBar x:Name="OcrProgressBar" Width="200" Height="18" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="添加文件" Click="SelectFilesButton_Click" Padding="10,5"/>
            <Button Content="添加文件夹" Click="SelectFolderButton_Click" Padding="10,5" Margin="10,0,0,0"/>
            <Button Content="开始识别" Click="StartOcrButton_Click" Padding="10,5" Margin="20,0,0,0" FontWeight="Bold"/>
            <Button Content="导出到 Excel" Click="ExportExcelButton_Click" Padding="10,5" Margin="10,0,0,0"/>
            <Button Content="列设置" Click="ColumnSettingsButton_Click" Padding="10,5" Margin="10,0,0,0"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" Margin="0,0,10,0" Grid.RowSpan="2">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="删除" Click="RemoveFileButton_Click" Padding="10,5"/>
                    <Button Content="重命名" Click="RenameFileButton_Click" Padding="10,5" Margin="10,0,0,0"/>
                </StackPanel>
                <ListBox x:Name="FileListBox"/>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Grid.RowSpan="2"/>

            <DataGrid x:Name="OcrResultDataGrid" Grid.Column="2" AutoGenerateColumns="False" Grid.RowSpan="2" CanUserAddRows="False" CanUserDeleteRows="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="姓名">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="姓名Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="性别">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="性别Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="年龄">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="年龄Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="出生日期">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="出生日期Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="民族">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="民族Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="身份证号码">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="身份证号码Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="地址">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="住址Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="发行机关">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="发行机关Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.Header}" Value="有效期">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="有效期Status">
                                            <Binding.Converter>
                                                <local:FieldStatusToColorConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="序号" Binding="{Binding 序号}"/>
                    <DataGridTextColumn Header="姓名" Binding="{Binding 姓名}"/>
                    <DataGridTextColumn Header="性别" Binding="{Binding 性别}"/>
                    <DataGridTextColumn Header="年龄" Binding="{Binding 年龄}"/>
                    <DataGridTextColumn Header="出生" Binding="{Binding 出生日期ExcelFormat}"/>
                    <DataGridTextColumn Header="民族" Binding="{Binding 民族}"/>
                    <DataGridTextColumn Header="公民身份号码" Binding="{Binding 身份证号码}"/>
                    <DataGridTextColumn Header="住址" Binding="{Binding 住址}"/>
                    <DataGridTextColumn Header="发行机关" Binding="{Binding 发行机关}"/>
                    <DataGridTextColumn Header="有效期限" Binding="{Binding 有效期}"/>
                    <DataGridTemplateColumn Header="原始OCR">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="查看" Click="ViewRawOcr_Click" Tag="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
