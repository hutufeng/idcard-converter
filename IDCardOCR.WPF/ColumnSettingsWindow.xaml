<Window x:Class="IDCardOCR.WPF.ColumnSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="列设置" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <ItemsControl ItemsSource="{Binding ColumnSettings}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding OriginalHeader}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="2" Text="{Binding DisplayHeader}" MinWidth="150"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="确定" IsDefault="True" Click="OkButton_Click" MinWidth="70" Margin="0,0,10,0"/>
            <Button Content="取消" IsCancel="True" Click="CancelButton_Click" MinWidth="70"/>
        </StackPanel>
    </StackPanel>
</Window>
